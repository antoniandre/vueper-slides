    &lt;vueper-slides arrows-outside bullets-outside transition-speed='250'&gt;
      &lt;vueper-slide
        v-for="i in 6"
        :key="i"
        :title="i.toString()"
        :style="'background-color: ' + ['#ff5252', '#42b983'][i % 2]"&gt;&lt;/vueper-slide&gt;
    &lt;/vueper-slides&gt;
  ssh-pre(language="css" label="CSS").
    .ex--center-mode {
      width: 600px;
